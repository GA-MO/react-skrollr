{
  "name": "react-component-npm-package-boilerplate",
  "version": "0.1.0",
  "description": "React boilerplate easy to create npm package react component",
  "main": "lib/index.js",
  "scripts": {
    "dev": "webpack-dev-server --hot --inline",
    "test": "npm run lint && mocha ./src/**/*.test.js --compilers js:babel-register",
    "test:watch": "mocha ./src/**/*.test.js --compilers js:babel-register --watch",
    "lint": "eslint ./src",
    "clean": "rimraf lib",
    "build": "npm run clean && babel src --out-dir lib",
    "prepublish": "npm run build"
  },
  "author": "Thawatchai Kuansombat (thawatchai.deartk@gmail.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GA-MO/react-component-npm-package-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/GA-MO/react-component-npm-package-boilerplate/issues"
  },
  "homepage": "https://github.com/GA-MO/react-component-npm-package-boilerplate",
  "keywords": [
    "react-component",
    "react-component-npm",
    "react-component-npm-package",
    "react-component-npm-package-boilerplate",
    "react"
  ],
  "files": [
    "lib",
    "src/style.css"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "css-loader": "^0.28.7",
    "eslint": "^4.5.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.3.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^3.5.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-hot-loader": "^1.3.1",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.2",
    "styled-components": "^2.1.2",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  }
}
